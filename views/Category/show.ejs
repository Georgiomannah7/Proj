<body>
    <%- include('../includes/nav.ejs') %>

    <h1>Categories</h1>
    <% if (cat.length>0) {%>
        <% for (let ct of cat ){ %>
        <h1><%= ct.name %></h1>
        <h1><%= ct.description%></h1>
        <h1><%= ct.showNbrOfCars %></h1>
        <form action="CatDet/<%=ct.name%>" method="get">
           <button type="submit">Details</button> 
           </form>
           <hr>
        <form action="/Category/Upd/<%=ct.name%>" method="get">
            <input type="hidden" name="name" value="<%=ct.name%>">
                    <button type="submit">Update</button>  
        </form>
        <hr>
        <form action="/Category/BrandDel" method="post">
        <input type="hidden" name="name" value="<%= ct.name%>">   
        <button type="submit">Delete</button> 
        </form>  
        <%}%>         
        <% }else {%>
            <h1>no  categories/h1>
            <% } %>

